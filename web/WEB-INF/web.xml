<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MiServlet</servlet-name>
        <servlet-class>servlets.MiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controladorv</servlet-name>
        <servlet-class>web.utp.controlador.Controladorv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorCurso</servlet-name>
        <servlet-class>web.utp.controlador.ControladorCurso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ControladorValidar</servlet-name>
        <servlet-class>web.utp.controlador.ControladorValidar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>web.utp.controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorC</servlet-name>
        <servlet-class>web.utp.controlador.ControladorCurso</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MiServlet</servlet-name>
        <url-pattern>/servletInicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controladorv</servlet-name>
        <url-pattern>/Controladorv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorCurso</servlet-name>
        <url-pattern>/ControladorCurso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorValidar</servlet-name>
        <url-pattern>/ControladorValidar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorC</servlet-name>
        <url-pattern>/ControladorC</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
